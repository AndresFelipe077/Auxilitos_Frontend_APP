<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    android:background="@drawable/fondo_login"
    android:accessibilityPaneTitle="a"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">

            <!--Parte de arriba-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_regresar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Regresar"
                    android:layout_gravity="center"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/editarPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar perfil"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/eliminarCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar cuenta"
                    android:layout_gravity="center"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/exit"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF0000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <!--descripcion-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi hijo es un niño adorable, le encanta ayudar a los demas es una personas increible, tiene 7 años."
                        android:layout_margin="20dp"
                        />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!--Nombre-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="7dp"
                android:layout_marginTop="10dp"
                >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre: "
                        android:layout_margin="15dp"
                        />

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Andres Felipe Pizo Luligo carmesia de pamplejo"
                        android:layout_gravity="center"
                        />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            <!--Correo-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="7dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo: "
                        android:layout_margin="15dp"
                        />

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view3"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/correo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="felpilgamesstudio@gmail.com"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            <!--Genero-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="7dp"
                    >

                    <TextView
                        android:id="@+id/genero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genero"
                        android:layout_marginStart="-100dp"
                        android:layout_margin="15dp"
                        />

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masculino"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            <!--Fecha-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de \n nacimiento: "
                        android:layout_margin="15dp"
                        android:gravity="center"
                        />


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view32"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/fechaNacimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="2022-12-23"
                        android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            <!--Retos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordernavigation"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bordernavigation"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos "
                        android:textColor="#0404F5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retos ganados: "
                        />

                    <TextView
                        android:id="@+id/juegoGanados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trivias"
                    />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    tools:progress="80"
                    android:progressTint="#0404F5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adivinar objetos"
                    />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    tools:progress="80"
                    android:progressTint="#0404F5"/>

            </LinearLayout>

            <!--Retos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordernavigation"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bordernavigation"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos por ganar"
                        android:textColor="#0818F2"
                        />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trivias"
                    />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    tools:progress="20"
                    android:progressTint="#0404F5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adivinar objetos"
                    />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    tools:progress="20"
                    android:progressTint="#0404F5"/>

            </LinearLayout>

            <!--Doble factor-->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view5"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habilita la autenticación de dis factores"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pide ayuda a tus padres, se te solicitará un token seguro y aleatorio, lo podrás recuperar con la aplicación Google Authenticator con el teléfono"
                    android:layout_marginTop="5dp"
                    />

                <Button
                    android:id="@+id/btn_login"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dynapuff"
                    android:text="Habilitar"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="#2ACD05"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>